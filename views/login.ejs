            <!-- Register section -->
            <section style=" background: linear-gradient(0.25turn, #3f87a6, #ebf8e1);">
                <div class="container py-5">
                    <i class="fas fa-sign-in-alt"></i>
                    <h1 class="pb-5 text-center">Please Log-In</h1>

                    <%- include('partials/logMsg.ejs') %>

                        <form class="log-in" action="/login" method="POST">
                            <input type="email" id="email" name="email" placeholder="Email"
                                value=" <%= typeof email !='undefined'? email :'' %>">
                            <input type="text" id="password" name="password" placeholder="Password"
                                value="<%= typeof password !='undefined'? password :'' %>">
                            <a href="#" style="text-decoration: none;"><button class="log-btn"
                                    type="submit">Login</button></a>
                        </form>
                        <div class="login-txt">
                          <p> Don't have an account?<a href="/register"> Register Now </a></p> 
                        </div>
                </div>
            </section>

